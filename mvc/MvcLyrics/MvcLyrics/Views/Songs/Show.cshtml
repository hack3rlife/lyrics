@using MvcLyrics.Models

@model MvcLyrics.Models.SongViewModel

<div>
    <h1>@ViewBag.Title</h1>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Song.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Song.Idiom.IdiomName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.Idiom.IdiomName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Song.SongName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.SongName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Song.Lyrics)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.Lyrics)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Song.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.Author)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Song.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Song.CreatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Song.LastUpdate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.LastUpdate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Song.UpdatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Song.UpdatedBy)
        </dd>

    </dl>
</div>
<div id="Albums">
    <h4>Albums</h4>
    <hr />
    <ul>
        @foreach (var album in Model.Discography.GroupBy(x => x.Album.AlbumName))
        {
            <li>@Html.ActionLink(album.First().Album.AlbumName, "Show", "Albums", new { id = album.First().Album.AlbumId }, null)</li>
        }
    </ul>
</div>
<div id="Artists">
    <h4>Artists</h4>
    <hr />
    <ul>
        @foreach (var artist in Model.Discography)
        {
            <li>@Html.ActionLink(artist.Artist.FirstName, "Show", "Artists", new { id = artist.Artist.ArtistId }, null)</li>
        }
    </ul>
</div>