@*@model IEnumerable<MvcLyrics.Models.Artist>*@

@model PagedList.IPagedList<MvcLyrics.Models.Artist>
@using PagedList.Mvc

@{
    ViewBag.Section = "Artist";
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">        
    <div class="col-lg-12">
        <div class="text-right">
            <i class="fa fa-plus"></i>  @Html.ActionLink("Create New", "Create")
        </div>
        
           
            
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.ActionLink( "Country", "Index", new { sortOrder =  "country"+ ViewBag.SortOrder, currentFilter = ViewBag.CurrentFilter })
                                </th>
                                <th>
                                    @Html.ActionLink("Name", "Index", new { sortOrder = "name" + ViewBag.SortOrder, currentFilter = ViewBag.CurrentFilter })
                                </th>                               
                                <th>
                                   @Html.ActionLink("Created Date", "Index", new { sortOrder =  "created_date" + ViewBag.SortOrder, currentFilter = ViewBag.CurrentFilter })
                                </th>
                                <th>
                                   @Html.ActionLink("Updated Date", "Index", new { sortOrder = "updated_date" + ViewBag.SortOrder, currentFilter = ViewBag.CurrentFilter })
                                </th>                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Country.CountryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>                                  
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastUpdate)
                                    </td>                                   
                                    <td>
                                        <i class="fa fa fa-edit"></i> @Html.ActionLink("Edit", "Edit", new { id = item.ArtistId }) |
                                        <i class="fa fa fa-list"></i> @Html.ActionLink("Details", "Details", new { id = item.ArtistId }) |
                                        <i class="fa fa fa-remove"></i> @Html.ActionLink("Delete", "Delete", new { id = item.ArtistId })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>               
            
            <div id="pager" class="text-right">
                @Html.PagedListPager(Model, page => Url.Action("Index",
                new
                {
                    page,
                    sortOrder = ViewBag.CurrentSort,
                    currentFilter = ViewBag.CurrentFilter
                }))
            </div>       
    </div>
</div>
<!-- /.row -->


